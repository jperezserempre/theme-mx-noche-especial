<main class="abi-mainContent abi-home">
  {# Inicio Banner Video Principal #}
  <section class="abi-videoBanner relative mb-32">
    <div class="w-[189px] lg:w-[450px] py-[125px] lg:pt-[182px] lg:pb-[100px] ml-auto mr-[19%] md:mx-auto">
      <h1 class="pl-6 font-primary font-normal text-[6px] lg:text-xs text-white">
        H1 Cerveza modelo Noche especial
      </h1>
      <picture>
        <source srcset="/{{ directory }}/sources/images/NocheEspecialBrand-desktop.png" media="(min-width: 1024px)">
        <img class="" src="/{{directory}}/sources/images/NocheEspecialBrand.png" alt="Logo de Cerveza Modelo" title="Logo de Cerveza Modelo" width="100%" height="100%">
      </picture>
      <h2 class="pl-6 font-third font-normal text-2xl lg:text-6xl text-white">
        {{ component.banner.title_g_banner }}
      </h2>
    </div>
    {# Flotantes con su contenedor y posicionados absolutos #}
    <div class="absolute top-8 -left-10">
      <picture>
        <source srcset="/{{ directory }}/sources/images/botella-1-section1-desktop.png" media="(min-width: 1024px)">
        <img class="" src="/{{ directory }}/sources/images/botella-1-section1-mobile.png" alt="" title="" >
      </picture>
    </div>

    <div class="absolute z-10 right-6 bottom-80">
      <picture>
        <source srcset="/{{ directory }}/sources/images/botella-2-section-1-desktop.png" media="(min-width: 1024px)">
        <img class="" src="/{{ directory }}/sources/images/botella-2-section-1.png" alt="" title="">
      </picture>
    </div>

    <div class="absolute -top-8 right-0">
      <picture>
        <source srcset="/{{ directory }}/sources/images/botella-3-section-1-desktop.png" media="(min-width: 1024px)">
        <img class="" src="/{{ directory }}/sources/images/botella-3-section-1.png" alt="" title="">
      </picture>
      
    </div>

    <section class="abi-videoBanner__info px-5 py-8 xl:pt-[58px] xl:px-[74px] relative bottom-0 left-0 right-0 xl:flex xl:flex-wrap">
      <div class="pb-7 xl:w-[28%] xl:pt-[62px] xl:pr-6">
        <h2 class="font-primary font-normal text-base pr-24 lg:pr-0 lg:mb-2.5 lg:text-2xl lg:leading-6">
          {{ component.banner.title_v_banner }}
        </h2>
        <p class="font-secondary font-normal text-sm pr-16 xl:pr-0 lg:text-lg lg:leading-5">
          {{ component.banner.descrip_v_banner }}
        </p>
      </div>
      <div class="w-screen md:w-auto xl:w-[72%] relative -translate-x-1/2 left-1/2 xl:left-0 xl:transform-none">
        <img class="w-full aspect-[23/12] max-w-[713px] md:mx-auto" 
        src="{{ component.banner.preview_v_banner }}"
        alt="{{ component.banner.preview_v_banner_alt }}"
        title="{{ component.banner.preview_v_banner_alt }}"
        />
        <img 
        class="abi-videoBanner__preview absolute -translate-x-1/2 left-1/2 top-[30%] md:top-[40%]" src="/{{directory}}/sources/images/button-play.png" 
        data-url="{{ component.banner.url_v_banner }}" 
        data-video-id="-ilTV_wDRNA"/>
      </div>
    </section>
  </section>

  {# Inicio sección Ingredientes de la cerveza #}
  <section class="abi-beerIngredients">
    <div class="abi-beerIngredientsInfo">
      <h2 class="abi-beerIngredientsInfo__title">{{ component.features_ingredients.title_features }}</h2>
      <p class="abi-beerIngredientsInfo__description">{{ component.features_ingredients.descrip_features }}</p>

      {# Only desktop #}
      <div class="hidden lg:grid lg:grid-rows-3 lg:grid-cols-2 lg:grid-flow-col lg:gap-8">
        {% for item_features in component.features_ingredients.features %}
            <div class="flex gap-4">
              <img class="w-[50px] h-[50px] object-contain"  src="{{ item_features.image }}" alt="{{ item_features.image_alt }}" title="{{ item_features.image_alt }}">
              <p class="font-secondary text-white font-normal text-base self-center">{{ item_features.description }}</p>
            </div>
        {% endfor %}
      </div>
      {# Only desktop #}
      <a class="hidden mt-[30px] lg:flex lg:items-center lg:justify-center mx-auto w-[220px] h-[50px] font-secondary font-bold text-black text-base text-center bg-button-primary rounded-lg cursor-pointer" href="{{ component.features_ingredients.url_button_features }}">{{ component.features_ingredients.text_button_features }}</a>
    </div>
    {# Bottle and Ingredients #}
    <article class="abi-beerIngredients__ingredientsWrapper ">
      <img class="max-h-[441px]" src="{{ component.features_ingredients.image_features }}" alt="{{ component.features_ingredients.image_features_alt }}" title="">
      <div>
        {% for item_ingredients in component.features_ingredients.ingredients %}
          <img src="{{ item_ingredients.image }}" alt="" title="{{ item_ingredients.image_alt }}">
        {% endfor %}
      </div>
    </article>

    <article class="my-8 flex flex-col gap-y-2 lg:hidden">
      {% for item_features in component.features_ingredients.features %}
        <div class="py-5 flex gap-4">
          <img class="w-[50px] h-[50px] object-contain"  src="{{ item_features.image }}" alt="{{ item_features.image_alt }}" title="{{ item_features.image_alt }}">
          <p class="font-secondary text-white font-normal text-base self-center">{{ item_features.description }}</p>
        </div>
      {% endfor %}
    </article>
    <a class="abi-beerIngredients__btnTada" href="{{ component.features_ingredients.url_button_features }}">{{ component.features_ingredients.text_button_features }}</a>
  </section>

  {# Inicio sección ocasiones de consumo #}
  <section class="abi-ocasiones">
    <h2 class="font-primary font-normal text-2xl text-white text-center">{{ component.consumption_occasions.title_occasions }}</h2>
    <article class="abi-ocasiones__info relative">
      <picture>
        <source srcset="/{{ directory }}/sources/images/bg-ocasiones-desktop.jpg" media="(min-width: 1024px)">
        <img class="absolute w-full inset-0 h-full lg:max-h-[632px]" src="/{{ directory }}/sources/images/bg-ocasiones-mobile.jpg" alt="" title="">
      </picture>
      <div class="relative flex p-4 md:p-8 mt-48 lg:mt-52 md:mt-32">
        <div class="w-1/2 lg:w-full">
          <div class="relative flex flex-col lg:flex-wrap lg:flex-row lg:justify-between gap-8 lg:gap-x-[12%] -mt-[50%] lg:-mt-[15%] md:mt-0">
            {% for item_occasions in component.consumption_occasions.occasions %}
              <div class="abi-ocasiones__card lg:w-[28%]">
                <img class="max-w-[155px] lg:max-w-none lg:w-full" src="{{ item_occasions.image }}" alt="{{ item_occasions.image_alt }}" title="{{ item_occasions.title }}">
                <h3 class="font-primary text-base text-white font-normal lg:text-2xl">{{ item_occasions.title }}</h3>
                <p class="font-secondary text-sm text-white font-normal" >{{ item_occasions.description }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="w-1/2 lg:absolute lg:w-[50%] lg:-translate-x-1/2 lg:left-1/2 -top-[30%]">
          <div class="relative flex flex-col justify-center items-center gap-4 -mt-[90%] md:mt-0">
            <img src="{{ component.consumption_occasions.image_occasions }}" alt="{{ component.consumption_occasions.image_occasions_alt }}" title="{{ component.consumption_occasions.image_occasions_alt }}">
            <p class="text-white uppercase text-sm font-medium absolute top-[65%] lg:top-[70%]">Botella 355ml</p>
            <p class="font-secondary text-base text-white font-bold absolute top-[70%] lg:top-[75%]">{{ component.consumption_occasions.text_occasions }}</p>
            <a class="btn-ocasions-tada bg-button-primary font-secondary text-sm font-bold w-[148px] h-[45px] rounded-md flex place-content-center place-items-center leading-4" href="{{ component.consumption_occasions.url_button_one_occasions }}">{{ component.consumption_occasions.text_button_one_occasions }}</a>
            <a class="btn-ocasions-wallmart bg-button-primary font-secondary text-sm font-bold w-[148px] h-[45px] rounded-md flex place-content-center place-items-center leading-4" href="{{ component.consumption_occasions.url_button_two_occasionss }}">{{ component.consumption_occasions.text_button_two_occasions }}</a>
          </div>
        </div>
      </div>
    </article>
  </section>



  {# INICIO COMPONENTE MAPA #}
  {% if view_map %}
    <section id="section-3" class="page-find-it__section-three abi-great-colombia__home--map mt-16 lg:mt-40">
      <div id="comprar" > <!-- ANCHA PARA EL MAPA -->
        <div class="pb-4">
          <h2 class="font-primary text-2xl text-white mx-auto text-center w-3/5 mb-5">{{ title_block_map }}</h2>
          <div class="page-find-it__section-three__box abi-great-colombia__home--map--searchp">
            <div class="page-find-it__section-three__search abi-great-colombia__home--map--search--wrapper relative mb-4 w-[352px] lg:w-[860px] mx-auto">
              <input id="input-search-map" class="abi-great-colombia__home--map--search-input bg-transparent font-secondary font-normal text-white text-xs w-full h-[52px] rounded-full pl-[63px] border border-[#EEBB6F] placeholder:text-white"  type="text" placeholder="{{ placeholder_filter_map }}" />
